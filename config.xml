<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fabmo.toolminder" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FabMo Minder</name>
    <description>
        This app will find any FabMo device bind to your network.
    </description>
    <author email="jimmy.lucidarme@shopbottools.com" href="http://gofabmo.org">
        Jimmy Lucidarme, ShopBot Tools.
    </author>
    <content src="index.html" />
    <icon src="./icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <platform name="android">
        <preference name="android-targetSdkVersion" value="23" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.0.1" />
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-zeroconf" />
    <plugin name="cordova-plugin-chrome-apps-sockets-udp" spec="https://github.com/jlucidar/cordova-plugin-chrome-apps-sockets-udp" />
    <plugin name="cordova-plugin-inappbrowser" />

</widget>
