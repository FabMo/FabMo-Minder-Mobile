<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fabmo.toolminder" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FabMo Tool Minder</name>
    <description>
        This app will find any FabMo device bind to your network.
    </description>
    <author email="jimmy.lucidarme@shopbottools.com" href="http://gofabmo.org">
        Jimmy Lucidarme, ShopBot Tools.
    </author>
    <content src="index.html" />
     <icon src="./icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.0" />
    <engine name="android" spec="~4.0.3" />
    <plugin name="cordova-plugin-chrome-apps-sockets-udp" spec="~1.2.2" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-zeroconf" spec="~1.1.1" />
</widget>
